<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agenda"
    tools:context="projetofinal.mobile.com.projetofinal.AgendaTelefonicaActivity">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tituloAgendaTelefonica"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Agenda Telefonica"
                android:textAlignment="center"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/novo_contato"
                android:text="Novo Contato"
                android:textColor="#02030A"
                android:textSize="20sp"
                android:onClick="openNovoContatoOnClick"
                android:layout_width="150dp"
                android:layout_height="52dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#1D1B29"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/listar_contatos"
                android:text="Meus Contatos"
                android:textColor="#02030A"
                android:textSize="20sp"
                android:onClick="openListarContatosOnClick"
                android:layout_width="150dp"
                android:layout_height="52dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#1D1B29"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_weight="1"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>
